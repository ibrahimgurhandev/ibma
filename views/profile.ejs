<!doctype html>
<html>

<head>
    <title>Learn Languages by chatting with People around the world</title>
    <link rel="stylesheet"
        href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet"
        href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
        <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <link rel="stylesheet" href="css/index.css">
</head>

<body>


    <div class="wrapper">
        <div class="sidebar">
            <h2>IBMA</h2>
            <ul>
                <li><a href="/"><i class="fas fa-home"></i> Home</a></li>
                <li><a href="/about"><i class="fas fa-address-card"></i> About</a></li>
                <li><a href="/faq"><i class="fas fa-question"></i> FAQ</a></li>
                <li><a href="/contact"><i class="fas fa-address-book"></i> Contact</a></li>
               
            </ul> 
            <div class="social_media">
              <a href="#"><i class="fab fa-facebook-f"></i></a>
              <a href="#"><i class="fab fa-twitter"></i></a>
              <a href="#"><i class="fab fa-instagram"></i></a>
          </div>
        </div>
        <div class="main_content">
            <div class="header">
                <div>Welcome to IBMA</div>
                <div>
                    <a href="/logout" class="btn btn-primary"><span
                        class="fa fa-user"></span>Logout</a>
                </div>
               </div>  
            <div class="info">
                <div class="container">
               <div class="join-container">
                <header class="join-header">
                  <h1><i class="fas fa-smile"></i> Chat App</h1>
                </header>
                <main class="join-main">
                  <form action="/chat">
                    <div class="form-control">
                      <input
                        type="text"
                        name="username"
                        id="username"
                        value="<%= user.name %>"
                        hidden
                      /> 
                      <h6>Username: <%= user.name %></h6>
                    </div>
                    <div class="form-control">
                      <label for="room">Room</label>
                      <select name="room" id="room">
                        <option name="roomId" value="Spanish">Spanish</option>
                        <option name="roomId" value="Arabic">Arabic</option>
                        <option name="roomId"  value="English">English</option>
                        <option name="roomId" value="French">French</option>
                        <option name="roomId" value="Chinese">Chinese</option>
                        <option name="roomId"  value="Russian">Russian</option>
                      </select>
                    </div>
                    <button type="submit" class="btn">Join Chat</button>
                  </form>
                </main>
              </div>
              
  
    

            </div>
        </div>
    </div>
  
<script src="main.js"></script>
<script>
  const currrentUser = "<%= user.local.email %>"
</script>
</body>

</html>